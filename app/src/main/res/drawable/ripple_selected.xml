<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true"
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_red_active"></solid>
            <stroke android:color="@color/color_grey" android:width="@dimen/stroke_width_small"></stroke>
            <corners android:radius="@dimen/radius_small"></corners>
        </shape>
    </item>
    <item android:state_enabled="true"
        android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_red_active"></solid>
            <stroke android:color="@color/color_grey" android:width="@dimen/stroke_width_small"></stroke>
            <corners android:radius="@dimen/radius_small"></corners>
        </shape>
    </item>
    <item android:state_enabled="true"
        android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_blue_active"></solid>
            <corners android:radius="@dimen/radius_small"></corners>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_white"></solid>
            <corners android:radius="@dimen/radius_small"></corners>
        </shape>
    </item>
</selector>