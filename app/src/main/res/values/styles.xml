<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.TitleOnly">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.Login.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/color_white</item>
        <item name="android:textColorPrimary">@color/default_text</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="CustomRating" parent="@android:style/Widget.Material.Light.RatingBar" >
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">40dp</item>
        <item name="android:isIndicator">true</item>
        <item name="android:scaleY">0.5</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:layout_marginLeft">-60dp</item>
        <item name="android:layout_marginRight">-60dp</item>
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:layout_marginBottom">-6dp</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_bg</item>
        <item name="android:minHeight">@dimen/rating_size</item>
        <item name="android:maxHeight">@dimen/rating_size</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/color_star2</item>
        <item name="colorControlActivated">@color/color_star2</item>
    </style>
</resources>
